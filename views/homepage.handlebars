<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <h1>{{title}}</h1>
      </div>
      <div class="meta">
        Posted by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>